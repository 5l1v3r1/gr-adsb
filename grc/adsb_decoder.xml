<?xml version="1.0"?>
<block>
  <name>ADS-B Decoder</name>
  <key>adsb_decoder</key>
  <category>ADS-B</category>
  <import>import adsb</import>
  <make>adsb.decoder($fs, $error_corr, $print_level)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Sampling Rate</name>
    <key>fs</key>
    <type>float</type>
  </param>
  <param>
    <name>Error Correction</name>
    <key>error_corr</key>
    <value>"None"</value>
    <type>enum</type>
    <option>
      <name>None</name>
      <key>"None"</key>
    </option>
    <option>
      <name>Conservative</name>
      <key>"Conservative"</key>
    </option>
    <option>
      <name>Brute Force</name>
      <key>"Brute Force"</key>
    </option>
  </param>
  <param>
    <name>Print Level</name>
    <key>print_level</key>
    <value>"Brief"</value>
    <type>enum</type>
    <option>
      <name>None</name>
      <key>"None"</key>
    </option>
    <option>
      <name>Brief</name>
      <key>"Brief"</key>
    </option>
    <option>
      <name>Verbose</name>
      <key>"Verbose"</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
