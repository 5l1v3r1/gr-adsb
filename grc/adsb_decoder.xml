<?xml version="1.0"?>
<block>
  <name>ADS-B Decoder</name>
  <key>adsb_decoder</key>
  <category>[ADS-B]</category>
  <import>import adsb</import>
  <make>adsb.decoder($msg_filter, $error_corr, $print_level, $log_csv, $csv_filename, $log_db, $db_filename)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Message Filter</name>
    <key>msg_filter</key>
    <value>"Extended Squitter Only"</value>
    <type>enum</type>
    <option>
      <name>Extended Squitter Only</name>
      <key>"Extended Squitter Only"</key>
    </option>
    <option>
      <name>All Messages</name>
      <key>"All Messages"</key>
    </option>
  </param>
  <param>
    <name>Error Correction</name>
    <key>error_corr</key>
    <value>"None"</value>
    <type>enum</type>
    <option>
      <name>None</name>
      <key>"None"</key>
    </option>
    <option>
      <name>Conservative</name>
      <key>"Conservative"</key>
    </option>
    <option>
      <name>Brute Force</name>
      <key>"Brute Force"</key>
    </option>
  </param>
  <param>
    <name>Print Level</name>
    <key>print_level</key>
    <value>"Brief"</value>
    <type>enum</type>
    <option>
      <name>None</name>
      <key>"None"</key>
    </option>
    <option>
      <name>Brief</name>
      <key>"Brief"</key>
    </option>
    <option>
      <name>Verbose</name>
      <key>"Verbose"</key>
    </option>
  </param>
  <param>
    <name>Log to CSV</name>
    <key>log_csv</key>
    <value>"Disabled"</value>
    <type>enum</type>
    <option>
      <name>Disabled</name>
      <key>False</key>
    </option>
    <option>
      <name>Enabled</name>
      <key>True</key>
    </option>
  </param>
  <param>
    <name>CSV Filename</name>
    <key>csv_filename</key>
    <value>""</value>
    <type>string</type>
  </param>
  <param>
    <name>Log to Database</name>
    <key>log_db</key>
    <value>"Disabled"</value>
    <type>enum</type>
    <option>
      <name>Disabled</name>
      <key>False</key>
    </option>
    <option>
      <name>Enabled</name>
      <key>True</key>
    </option>
  </param>
  <param>
    <name>Database Filename</name>
    <key>db_filename</key>
    <value>""</value>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>pkt</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>zmq</name>
    <type>message</type>
  </source>
</block>
